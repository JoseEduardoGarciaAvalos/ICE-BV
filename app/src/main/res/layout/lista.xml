<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ues.ice_bv.Lista">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de acciones guardadas"
        android:id="@+id/jltv1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Vista:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:id="@+id/jltv2"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/jltv2"
        android:layout_toEndOf="@+id/jltv2"
        android:layout_marginStart="37dp"
        android:id="@+id/jll1"
        android:layout_alignBottom="@+id/jltv2" />

    <Button
        android:text="BÃšSQUEDA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jll1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:id="@+id/jlb1"
        android:onClick="busqueda" />

    <Button
        android:text="Ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/jlb1"
        android:layout_centerHorizontal="true"
        android:id="@+id/jlb2"
        android:onClick="ver" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/jltv3"
        android:layout_below="@+id/jlb1"
        android:id="@+id/jllv1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/jltv3"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:layout_alignStart="@+id/jlb2" />

    <TextView
        android:text="Acerca de..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/jltv4"
        android:layout_toStartOf="@+id/jltv3"
        android:textSize="12sp"
        android:textColor="@android:color/holo_blue_dark"
        android:textAllCaps="false"
        android:onClick="acercaDe" />

    <Button
        android:text="Eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/jlb2"
        android:layout_alignParentStart="true"
        android:id="@+id/jlb3"
        android:onClick="eliminar" />

</RelativeLayout>
