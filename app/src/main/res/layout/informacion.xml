<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/informacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ues.ice_bv.Informacion"
    android:scrollbars="none"
    android:scrollbarAlwaysDrawVerticalTrack="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
        android:id="@+id/jitv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="Información"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <ListView
        android:id="@+id/jilv1"
        android:layout_width="match_parent"
        android:layout_below="@+id/jitv1"
        android:layout_height="150dp" />

            <TextView
                android:id="@+id/jitv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notificación"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/jilv1"
                android:layout_marginBottom="10dp" />

            <TextView
        android:id="@+id/jitv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/jitv2"
                android:text="Notificar:"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/jitv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/jis1"
        android:layout_marginTop="27dp"
        android:text="Mínimo:"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/jiet1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/jitv4"
        android:layout_below="@+id/jis1"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/jitv3" />

    <Button
        android:id="@+id/jib1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="guardar"
        android:text="Guardar"
        android:layout_below="@+id/jiet1"
        android:layout_centerHorizontal="true" />

    <Switch
        android:id="@+id/jis1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch"
        android:layout_alignBaseline="@+id/jitv3"
        android:layout_alignBottom="@+id/jitv3"
        android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
